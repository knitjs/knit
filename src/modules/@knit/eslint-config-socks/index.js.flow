/* @flow */

import type { TJson } from '@knit/needle';

export type TRule =
    number
  | string
  | [number, string, ?TJson]
  | [number, number]
  | [number, TJson]
  | [string, TJson]

export type TConfig = {|
  extends?: Array<string>,
  parser?: string,
  parserOptions?: {|
    ecmaVersion?: number,
    sourceType?: string,
    ecmaFeatures?: TJson,
  |},
  rules?: { [k: string]: TRule },
  plugins?: Array<string>,
  globals?: { [k: string]: boolean },
  env?: { [k: string]: boolean },
|};

declare module.exports: TConfig;
