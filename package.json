{
  "private": true,
  "version": "0.4.1",
  "repository": "knitjs/knit",
  "author": {
    "name": "Shane Wilson"
  },
  "engines": {
    "node": ">=4",
    "npm": ">=3"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!@knit)"
    ],
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/__fixtures__/",
      "<rootDir>/__mocks__/"
    ],
    "testEnvironment": "node"
  },
  "license": "MIT",
  "dependencies": {
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx-self": "^6.22.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-preset-env": "^1.1.10",
    "babel-preset-react": "^6.23.0",
    "babel-relay-plugin": "^0.11.0",
    "babylon": "^6.16.1",
    "case-sensitive-paths-webpack-plugin": "1.1.4",
    "chalk": "1.1.3",
    "compression-webpack-plugin": "0.3.2",
    "css-loader": "^0.26.2",
    "depcheck": "^0.6.7",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-config-cleanjs": "4.0.0",
    "eslint-plugin-better": "0.1.5",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx": "0.0.2",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "execa": "^0.6.0",
    "file-loader": "^0.10.1",
    "fs-extra": "^3.0.1",
    "graphql": "^0.9.1",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "listr": "^0.12.0",
    "listr-silent-renderer": "^1.1.1",
    "listr-update-renderer": "^0.4.0",
    "listr-verbose-renderer": "^0.4.0",
    "lodash": "^4.17.4",
    "multimatch": "^2.1.0",
    "pify": "2.3.0",
    "read-pkg": "2.0.0",
    "read-pkg-up": "2.0.0",
    "semver": "5.3.0",
    "serialize-error": "^2.1.0",
    "style-loader": "^0.13.2",
    "sync-request": "^4.0.1",
    "update-notifier": "^2.1.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-merge": "^3.0.0",
    "write-pkg": "^3.0.1",
    "yargs": "^8.0.1"
  },
  "scripts": {
    "copy": "rm -rf dist && rm -rf build && yarn knit -- copy --ignore-path=@knit/**/{__mocks__,__tests__,*.js}",
    "build-lib": "NODE_ENV=production babel src/modules/ -d dist/ --ignore __mocks__,__tests__,jest,create",
    "build-cjs": "NODE_ENV=production yarn knit -- exec --scope modified --include=@knit --exclude=jest -- babel . -d ROOT_DIR/dist/KNIT_MODULE_NAME --ignore __mocks__,__tests__,jest,create",
    "build-packages": "yarn copy && yarn build-cjs && yarn knit -- stitch --scope modified",
    "version": "yarn knit -- exec --scope modified -- npm version --no-git-tag-version $npm_package_version && git add .",
    "publish-packages": "yarn knit -- exec --scope unpublished --working-dir build -- npm publish",
    "knit": "babel-node src/modules/@knit/knit/bin/cli.js",
    "test": "jest",
    "lint": "eslint --ext .js src",
    "flow": "flow check"
  },
  "devDependencies": {
    "@knit/babel-plugin-socks-relay": "file:src/modules/@knit/babel-plugin-socks-relay",
    "@knit/babel-preset-socks-react": "file:src/modules/@knit/babel-preset-socks-react",
    "@knit/common-tasks": "file:src/modules/@knit/common-tasks",
    "@knit/depcheck": "file:src/modules/@knit/depcheck",
    "@knit/eslint-config-socks": "file:src/modules/@knit/eslint-config-socks",
    "@knit/eslint-config-socks-react": "file:src/modules/@knit/eslint-config-socks-react",
    "@knit/find-dependencies": "file:src/modules/@knit/find-dependencies",
    "@knit/find-modified-packages": "file:src/modules/@knit/find-modified-packages",
    "@knit/find-packages": "file:src/modules/@knit/find-packages",
    "@knit/find-unpublished-packages": "file:src/modules/@knit/find-unpublished-packages",
    "@knit/get-package-from-dir": "file:src/modules/@knit/get-package-from-dir",
    "@knit/get-package-name": "file:src/modules/@knit/get-package-name",
    "@knit/html-remove-webpack-plugin": "file:src/modules/@knit/html-remove-webpack-plugin",
    "@knit/is-scoped": "file:src/modules/@knit/is-scoped",
    "@knit/jest-config-socks": "file:src/modules/@knit/jest-config-socks",
    "@knit/knit": "file:src/modules/@knit/knit",
    "@knit/knit-core": "file:src/modules/@knit/knit-core",
    "@knit/logger": "file:src/modules/@knit/logger",
    "@knit/needle": "file:src/modules/@knit/needle",
    "@knit/nice-errors": "file:src/modules/@knit/nice-errors",
    "@knit/path-join": "file:src/modules/@knit/path-join",
    "@knit/read-pkg": "file:src/modules/@knit/read-pkg",
    "@knit/webpack-config-socks": "file:src/modules/@knit/webpack-config-socks",
    "@knit/webpack-config-socks-app": "file:src/modules/@knit/webpack-config-socks-app",
    "@knit/webpack-config-socks-lib": "file:src/modules/@knit/webpack-config-socks-lib",
    "@knit/webpack-dev-server-config": "file:src/modules/@knit/webpack-dev-server-config",
    "@knit/yarn-utils": "file:src/modules/@knit/yarn-utils",
    "babel-cli": "^6.23.0",
    "babel-jest": "^20.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "eslint": "^3.16.1",
    "flow-bin": "^0.46.0",
    "flow-typed": "^2.1.2",
    "jest": "^20.0.3",
    "react": "^15.4.2"
  }
}
